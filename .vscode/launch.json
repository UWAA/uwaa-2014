{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",    
    "configurations": [
        {
            "firefoxExecutable": "C:\\Program Files\\Firefox Developer Edition\\firefox.exe",        
            "type": "firefox",
            "request": "launch",
            "name": "JavaScript DB - uwalum.test",
            "url": "http://uwalum.test/",
            "webRoot": "${workspaceFolder}",
            "log": {
                "fileName": "${workspaceFolder}/vscode-firefox-debug.log",
                "fileLevel": {
                    "default": "Debug"
                },
                "consoleLevel": {
                    "default": "Warn"
                }
            },
            "pathMappings": [               
                {
                    "url": "http://uwalum.test",
                    "path": "k:/env/wordpress/www/wordpress-one/public_html"
                }
            ]
        },
        {
            "name": "php Debug - uwalum.test",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "/srv/www/wordpress-one/public_html": "k:\\env\\wordpress\\www\\wordpress-one\\public_html"
            }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        }
    ]
}